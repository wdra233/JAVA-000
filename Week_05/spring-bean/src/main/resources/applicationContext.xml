<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.eric.bean"/>
    <bean id="student1" name="eric" class="org.eric.bean.bean.Student">
        <constructor-arg index="0" value="1"/>
        <constructor-arg index="1" value="Eric"/>
        <constructor-arg index="2" value="South Ave"/>
    </bean>

    <bean id="student2" name="jack" class="org.eric.bean.bean.Student">
        <constructor-arg index="0" value="2"/>
        <constructor-arg index="1" value="Jack"/>
        <constructor-arg index="2" value="Lake Ave"/>
    </bean>
</beans>